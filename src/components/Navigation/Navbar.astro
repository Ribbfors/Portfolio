---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import { config } from "@/constants/config";
const pathname = removeTrailingSlash(Astro.url.pathname);

const links = [
  {
    href: "/posts",
    text: "Posts",
  },
];
---

<header
  class={`z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between ${
    pathname === "/" && "text-neutral-100"
  }`}
>
  <a href={`/`} class="text-neutral-100 text-2xl">{config.website_name}</a>

  <nav>
    <ul class="flex flex-row gap-2">
      {
        links.map((link) => (
          <li>
            <a
              href={link.href}
              class={`hover:text-neutral-100  ${
                pathname === link.href ? "text-neutral-100" : "text-neutral-400"
              }`}
            >
              {link.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
